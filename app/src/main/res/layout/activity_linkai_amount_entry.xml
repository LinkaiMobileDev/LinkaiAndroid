<?xml version="1.0" encoding="utf-8"?>
     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.linkai.app.LinkaiAmountEntryActivity">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_padding_top"
            android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <LinearLayout
                        android:id="@+id/llImgContainer"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        >
                        <com.linkai.app.design.RoundedImageView
                            android:id="@+id/imgProfileThumb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_user"
                            android:padding="0dip"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/llImgContainer"
                        android:layout_toEndOf="@+id/llImgContainer"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/txtStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="online"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imgLstLogo"
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/ic_linkai_logo"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    >
                    <View
                        android:layout_width="40dp"
                        android:layout_height="5dp"
                        android:background="@color/colorPrimaryLight"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        />
                    <View
                        android:layout_width="40dp"
                        android:layout_height="5dp"
                        android:background="@color/colorLinakaiStepsToDo"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        />
                    <View
                        android:layout_width="40dp"
                        android:layout_height="5dp"
                        android:background="@color/colorLinakaiStepsToDo"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        />
                    <View
                        android:layout_width="40dp"
                        android:layout_height="5dp"
                        android:background="@color/colorLinakaiStepsToDo"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        />
                    <View
                        android:layout_width="40dp"
                        android:layout_height="5dp"
                        android:background="@color/colorLinakaiStepsToDo"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity=""
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="@string/amount_entry_title_amount"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="3"
                        android:layoutDirection="ltr"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingEnd="130dp"
                            android:paddingRight="130dp"
                            android:id="@+id/txtAmount"
                            android:textSize="22sp"
                            android:inputType="numberDecimal"
                            android:text=""
                            android:maxLength="12"
                            android:layout_gravity="center_vertical"

                            />
                        <Spinner android:id="@+id/spinnerCurrency"
                            android:layout_width="130dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_vertical|right|end"
                            android:gravity="end|right"
                            />
                    </FrameLayout>

                    <Button
                        android:id="@+id/btnContinue"
                        style="?android:textAppearanceSmall"
                        android:textAlignment="center"
                        android:text="@string/btn_continue"
                        android:textColor="#ffffff"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20dip"
                        android:layout_width="180sp"
                        android:layout_height="50sp"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/app_button"
                        />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
