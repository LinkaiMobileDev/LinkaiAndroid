<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="top|left|start"
        android:src="@drawable/graphic2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="-10dp"
                android:layout_marginLeft="-10dp"
                android:layout_gravity="top|left|start"
                android:src="@drawable/graphic3"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="top|right|end"
                android:src="@drawable/graphic1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <!--Aya Malik linkai you-->
                <TextView
                    android:id="@+id/txtHead1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal"/>
                <!--350000 IQD-->
                <TextView
                    android:id="@+id/txtLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal"/>
                <!--Do you accept?-->
                <TextView
                    android:id="@+id/txtLine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal"/>
                <!--The request will be expired in 50s-->
                <TextView
                    android:id="@+id/txtSmallLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center_horizontal"/>
                <LinearLayout
                    android:id="@+id/llAcceptBtnContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/llBtnAcceptNo"
                        android:clickable="true"
                        android:background="@drawable/app_view_button_effect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_horizontal|center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/listitem_transfer_text_no"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_close_circle_grey600_36dp"
                            android:tint="@color/colorPrimary"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llBtnAcceptYes"
                        android:clickable="true"
                        android:background="@drawable/app_view_button_effect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:gravity="center_horizontal|center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/listitem_transfer_text_yes"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_checkbox_marked_grey600_36dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:tint="@color/colorPrimary"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right|end|bottom">
                    <ImageView
                        android:id="@+id/imgMsgStatus"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/lblChatBoxMessageTime"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="right|end" />
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="bottom|left|start"
        android:src="@drawable/ic_action_linkai"/>
</FrameLayout>