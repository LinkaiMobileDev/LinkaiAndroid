                android:pivotX="0%"
                android:pivotY="100%"
                android:toDegrees="45" >
                <shape android:shape="rectangle" >
                    <solid android:color="@color/colorBubbleIncoming" />
                </shape>
            </rotate>
        </item>
        <item android:left="16dp">
            <shape android:shape="rectangle" >
                <solid android:color="@color/colorBubbleIncoming" />
                <corners android:radius="15dp" />
            </shape>
        </item>

