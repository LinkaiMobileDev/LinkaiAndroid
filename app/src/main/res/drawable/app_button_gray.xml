<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"

        >

        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <gradient
                android:endColor="@color/gray2"
                android:startColor="@color/gray2"
                android:angle="90" />

            <stroke
                android:width="1dp"
                android:color="@color/gray2"
                >
            </stroke>
            <padding android:bottom="10.0dip" android:left="10.0dip" android:right="10.0dip" android:top="10.0dip" />
        </shape>

    </item>

    <item android:state_pressed="false"

        >
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <gradient
                android:endColor="@color/gray1"
                android:startColor="@color/gray1"
                android:angle="90"/>
            <stroke
                android:width="1dp"
                android:color="@color/gray1"
                >
            </stroke>
            <padding android:bottom="10.0dip" android:left="10.0dip" android:right="10.0dip" android:top="10.0dip" />
        </shape></item>


</selector>